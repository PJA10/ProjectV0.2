assambler: assistantFunctions.o dataStructures.o firstPass.o main.o prepareFiles.o secondPass.o
	gcc -g -Wall -ansi -pedantic assistantFunctions.o dataStructures.o firstPass.o main.o prepareFiles.o secondPass.o -o assambler

assistantFunctions.o: assistantFunctions.c
	gcc -c -Wall -ansi -pedantic assistantFunctions.c -o assistantFunctions.o

dataStructures.o: dataStructures.c
	gcc -c -Wall -ansi -pedantic dataStructures.c -o dataStructures.o

firstPass.o: firstPass.c
	gcc -c -Wall -ansi -pedantic firstPass.c -o firstPass.o

main.o: main.c constants.h assistantFunctions.h
	gcc -c -Wall -ansi -pedantic main.c -o main.o

prepareFiles.o: prepareFiles.c 
	gcc -c -Wall -ansi -pedantic prepareFiles.c -o prepareFiles.o

secondPass.o: secondPass.c 
	gcc -c -Wall -ansi -pedantic secondPass.c -o secondPass.o
